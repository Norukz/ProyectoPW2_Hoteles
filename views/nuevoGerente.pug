extends ./layout/index.pug
block compartircontenido
    main.container.mt-5 
        h1.text-center.mt-5 #{pagina}
        .row 
            .col-md-12 
                if(errores)
                    each error in  errores 
                        alert.col.alert-danger.text-center=error.mensaje 

            .row.justify-content-center.col 
                .col-md-8|
                    form(action = "/nuevoGerente", method="POST")
                        .mb-4 
                            input(type="hidden" id="id_grt" name="id_grt" value=id_grt)
                        .mb-4 
                            label.form-label(for="nombre") Nombre
                            input.form-control(type="text",value=nombre, name="nombre",placeholder="Nombre del Gerente...", required)
                        .mb-4 
                            label.form-label(for="apellidoPaterno") Apellido Paterno
                            input.form-control(type="text",value=ap_paterno , name="nombre",placeholder="Apellido Paterno...", required)
                        .mb-4 
                            label.form-label(for="apellidoMaterno") Apellido Materno
                            input.form-control(type="text",value=ap_materno , name="nombre",placeholder="apellido Materno...", required)    
                        .mb-4
                            label.form-label(for="telefono") Teléfono
                            input.form-control(type="tel", value=telefono,name="telefono",placeholder="Teléfono..." , maxlength="12",onkeypress="return (event.charCode >= 48 && event.charCode <= 57)", required)
                            span#passwordHelpInline.form-text
                            | Debe de ser de 10 a 12 números.


                        
                        .mb-4.d-grid
                            button.btn.btn-primary.btn-block(type="submit", id="btn_enviar") Enviar información

